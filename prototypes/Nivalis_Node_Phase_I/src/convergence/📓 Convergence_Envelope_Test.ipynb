# ğŸ” Halessa Phase II â€” Convergence Envelope Field Sweep

import numpy as np
import matplotlib.pyplot as plt
from fusion_field import Q_total

# ğŸ“ Grid Setup
x = np.linspace(-2, 2, 300)
y = np.linspace(-2, 2, 300)
X, Y = np.meshgrid(x, y)

z = 0.0  # fixed z-plane
t = 0.0  # frozen time step

# ğŸŒŒ Compute Q field
Q_field = Q_total(X, Y, z, t)

# ğŸ¨ Visualize
plt.figure(figsize=(10, 8))
plt.contourf(X, Y, Q_field, 100, cmap='plasma')
plt.colorbar(label='Q(x, y) Convergence Intensity')
plt.title("Halessa Phase II: Convergence Envelope Field at z=0, t=0")
plt.xlabel("x")
plt.ylabel("y")
plt.axis('equal')
plt.grid(False)
plt.tight_layout()
plt.show()
